#:kivy 2.1.0

<Button>:
    background_color: (210/100, 43/100, 43/100, 1) if self.state == 'normal' else (0, 0.0, 0.0, 1.0)
    font_size: 50

<Kalkulator>:
    orientation: "vertical"
    Label:
        id: ekran
        background_color: (96/255, 148/255, 114/255, 1)
        size_hint: 1, 0.3
        font_size: 50
        canvas.before:
            Color:
                rgba: self.background_color
            Rectangle:
                size: self.size
                pos: self.pos

    GridLayout:
        rows: 5
        cols: 4

        Button: 
            text: '('
            on_press: root.number(self.text)
        Button: 
            text: ')'
            on_press: root.number(self.text)
        Button: 
            text: '%'
            on_press: root.number(self.text)
        Button: 
            text: 'AC'
            on_press: root.clear(self.text)
        Button:
            text: '7'
            on_press: root.number(self.text)
        Button:
            text: '8'
            on_press: root.number(self.text)
        Button:
            text: '9'
            on_press: root.number(self.text)
        Button:
            text: '/'
            on_press: root.number(self.text)
        Button:
            text: '4'
            on_press: root.number(self.text)
        Button:
            text: '5'
            on_press: root.number(self.text)
        Button:
            text: '6'
            on_press: root.number(self.text)
        Button:
            text: '*'
            on_press: root.number(self.text)
        Button:
            text: '1'
            on_press: root.number(self.text)
        Button:
            text: '2'
            on_press: root.number(self.text)
        Button:
            text: '3'
            on_press: root.number(self.text)
        Button:
            text: '-'
            on_press: root.number(self.text)
        Button:
            text: '0'
            on_press: root.number(self.text)
        Button:
            text: '.'
            on_press: root.number(self.text)
        Button:
            text: '='
            on_press: root.wynik(self.text)
        Button:
            text: '+'
            on_press: root.number(self.text)
